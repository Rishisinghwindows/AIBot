# =============================================================================
# D23Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# WhatsApp Cloud API Configuration
# Get these from: https://developers.facebook.com/apps/
# -----------------------------------------------------------------------------
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-custom-verify-token
WHATSAPP_APP_SECRET=your-app-secret-for-signature-verification

# -----------------------------------------------------------------------------
# fal.ai Configuration (Image Generation)
# Get API key from: https://fal.ai/
# -----------------------------------------------------------------------------
FAL_KEY=your-fal-api-key

# -----------------------------------------------------------------------------
# Tavily Search API Configuration
# Get API key from: https://tavily.com/
# -----------------------------------------------------------------------------
TAVILY_API_KEY=tvly-your-tavily-api-key

# -----------------------------------------------------------------------------
# Railway API Configuration (RapidAPI - Indian Railways)
# Get API key from: https://rapidapi.com/
# Used for PNR Status and Train Running Status
# -----------------------------------------------------------------------------
RAILWAY_API_KEY=your-rapidapi-key

# -----------------------------------------------------------------------------
# News API Configuration
# Get API key from: https://newsapi.org/
# -----------------------------------------------------------------------------
NEWS_API_KEY=your-newsapi-key

# -----------------------------------------------------------------------------
# Astrology API Configuration (Optional)
# For additional astrology features
# -----------------------------------------------------------------------------
ASTROLOGY_API_KEY=your-astrology-api-key

# -----------------------------------------------------------------------------
# LangSmith Tracing Configuration (Optional)
# For debugging and monitoring LangChain/LangGraph
# Get API key from: https://smith.langchain.com/
# -----------------------------------------------------------------------------
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=ls__your-langsmith-api-key
LANGSMITH_PROJECT=d23bot
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=d23bot
POSTGRES_SCHEMA=agentic

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
BOT_PORT=9002
LOG_LEVEL=INFO
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_BURST_LIMIT=5
